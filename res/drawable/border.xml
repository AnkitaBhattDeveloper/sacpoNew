<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
           <gradient android:angle="90" android:centerColor="@color/LIST_BACK_SELECTION_CENTER" android:endColor="@color/LIST_BACK_SELECTION_END" android:startColor="@color/LIST_BACK_SELECTION_START" />

            <stroke android:width="1dp" android:color="@color/LIST_BACK_SELECTION_STROKE" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

             <corners android:radius="0px"/>
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/LIST_BACK_CENTER" android:endColor="@color/LIST_BACK_END" android:startColor="@color/LIST_BACK_START" />

            <stroke android:width="1dp" android:color="@color/LIST_BACK_STROKE" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:radius="0px"/>
        </shape></item>

</selector>
