<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sacpocolorPrimary</item>
        <item name="colorPrimaryDark">@color/sacpocolorPrimaryDark</item>
        <item name="colorAccent">@color/sacpocolorAccent</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/popup_in</item>
        <item name="android:windowExitAnimation">@animator/popup_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="editText_1" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_boder_profile_1</item>
        <item name="android:textColor">@color/colorblack</item>
    </style>
    <style name="editText_2" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_boder_profile_2</item>
        <item name="android:textColor">@color/colorblack</item>
    </style>
    <style name="searchBar" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_bar</item>
        <item name="android:textColor">@color/colorblack</item>
    </style>

    <style name="errorText" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/errorText</item>
        <item name="android:background">@color/colorblack</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.Button4" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ccdbfc</item>
