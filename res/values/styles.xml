        <item name="android:background">#cedcfc</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#B4B52B</item>
    </style>

    <style name="AppTheme.Button4_dis" parent="Widget.AppCompat.Button.Colored">
