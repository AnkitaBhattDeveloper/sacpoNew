<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Rv_Dash_stat_atten"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_s_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/stat_width_details"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left">

                <ImageButton
                    android:id="@+id/imageButton_details_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@mipmap/ic_launcher_detail_button"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="@dimen/stat_width_120"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/SmallerDp"
                    android:text="Jan"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="@dimen/stat_width"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/SmallerDp"
                    android:text="2018"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="@dimen/stat_width"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCount"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/SmallerDp"
                    android:text="12"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_s_view"/>

</LinearLayout>