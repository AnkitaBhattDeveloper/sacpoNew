<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_marginTop="@dimen/large"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginTop="@dimen/SmallerDp"
        android:layout_marginBottom="@dimen/SmallerDp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lblRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:text="Tickets"
                    android:textAllCaps="true"
                    android:textSize="@dimen/SmallerTextSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/body_container"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/SmallDp"
                android:background="@color/info_back"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblTitle"
                    android:text=""
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/info_back"
                android:id="@+id/footer_container"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="textStart"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/lblStatus"
                    android:layout_weight=".6"
                    android:layout_margin="@dimen/ExtraSmallerDp"
                    android:text="Pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/lblDate"
                    android:layout_weight=".4"
                    android:layout_margin="@dimen/ExtraSmallerDp"
                    android:text="24th Aug 2018 2:33:33 AM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>