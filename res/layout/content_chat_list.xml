<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_radius_orange"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/content_chat_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblChatrole"
            android:layout_width="5dp"
            android:background="#cccccc"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblChatId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/lblChatMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblChatId"
                    android:layout_margin="5dp"
                    android:text="Vineet"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblUser"
                    android:layout_margin="@dimen/margin_six"
                    android:textColor="#8f8f8f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Superadmin @ portal"
                    android:textSize="@dimen/small"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="false"
                    android:gravity="center_horizontal"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblDate"
                    android:layout_margin="5dp"
                    android:textColor="#8f8f8f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Superadmin @ portal"
                    android:textSize="@dimen/small"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="false"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/live_status"
        />
</LinearLayout>