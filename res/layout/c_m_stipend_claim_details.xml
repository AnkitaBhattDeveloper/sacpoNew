<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_marginTop="@dimen/large"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/biggestDp"
        android:layout_marginTop="@dimen/biggestDp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/SmallerDp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="HEADING"
                        android:padding="@dimen/ExtraSmallDp"
                        android:textSize="@dimen/BigTextSize"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/ExtraGiantDp"
                        android:layout_marginRight="@dimen/ExtraGiantDp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/heading"
                        />


                    <LinearLayout
                        android:id="@+id/body_container"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/detail_container"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/lblLoginData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:background="@color/back_small_heading"
                                android:textColor="@color/txt_small_heading"
                                android:textStyle="bold"
                                android:textAllCaps="true"/>
                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblStudent_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtStudent_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>
                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>


                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblClaimDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtClaimDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblApprovedBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtApprovedBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>



                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblProceedBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtProceedBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:padding="@dimen/small"
                                android:layout_margin="@dimen/ExtraSmallerDp"
                                android:textColor="@color/txt_small_value"
                                android:background="@color/back_small_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblStipendAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/txtStipendAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text="" />

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/colorPrimaryLight"
                        android:id="@+id/footer_container"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>