<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/footer45_MarginBottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".grant.xCubeStudent.claims.SAttSummaryList"
    tools:showIn="@layout/a_satt_summary_list">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/biggestDp"
                android:layout_marginTop="@dimen/biggestDp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/SmallerDp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/activity_heading"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:gravity="center_horizontal"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="HEADING"
                                    android:padding="@dimen/ExtraSmallDp"
                                    android:textSize="@dimen/BigTextSize"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_marginLeft="@dimen/ExtraGiantDp"
                                    android:layout_marginRight="@dimen/ExtraGiantDp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/heading_1"
                                    />


                            </LinearLayout>

                        <LinearLayout

                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >
                                <TextView
                                    android:id="@+id/lblAtt"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtAtt"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >
                                <TextView
                                    android:id="@+id/lblALeave"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtALeave"
                                    android:layout_width="0dp"
                                    android:text=""
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >

                                <TextView
                                    android:id="@+id/lblSLeave"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtSLeave"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >
                                <TextView
                                    android:id="@+id/lblOPLeave"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"
                                    android:textStyle="bold"
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtOPLeave"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >

                                <TextView
                                    android:id="@+id/lblUPLeave"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtUPLeave"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"

                                    android:layout_marginTop="@dimen/ExtraSmallerDp"
                                    android:layout_marginBottom="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"/>
                            </LinearLayout>




                        </LinearLayout>

                            <LinearLayout
                                android:background="@color/background_grey"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/attendanceContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ProgressBar
                                    android:id="@+id/progress_bar_r"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/biggestDp"
                                    android:layout_marginTop="@dimen/biggestDp"
                                    android:visibility="gone" />
                                <LinearLayout
                                    android:id="@+id/content_container_r"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/progress_bar_r"
                                    android:orientation="vertical">
                                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/attendanceTable"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:stretchColumns="*">

                                        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/attendanceTableScroll"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp">

                                            <androidx.recyclerview.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/rVAttendance"
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:isScrollContainer="true"
                                                android:scrollY="@dimen/SmallerDp"
                                                android:scrollbars="horizontal"
                                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                tools:context=".grant.xCubeStudent.claims.SAttSummaryList"
                                                tools:listitem="@layout/claim_att_row" />
                                        </HorizontalScrollView>
                                    </TableLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/btn_continue"
                                    android:padding="@dimen/padding_5"
                                    android:textStyle="normal"
                                    android:backgroundTint="@color/link"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>