<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TableRow xmlns:tools="http://schemas.android.com/tools"
           android:id="@+id/tRowA"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="1dp"
           xmlns:android="http://schemas.android.com/apk/res/android">
         <TextView
               android:id="@+id/lblPoll_1"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/lblPoll_2"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/lblPoll_3"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               /> <TextView
               android:id="@+id/lblPoll_4"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/lblPoll_5"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               />
             <TextView
               android:id="@+id/lblPoll_6"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:layout_margin="1dp"
               android:minHeight="@dimen/btnHeightSmall"
               android:padding="@dimen/SmallerDp"
               android:background="@drawable/backcell_1"
               android:ellipsize="end"
               android:maxLines="1"
               android:textAlignment="center" android:gravity="center_horizontal"
               />

           <LinearLayout
               android:layout_width="120dp"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:layout_margin="1dp"
               android:textAlignment="center" android:gravity="center_horizontal"
               android:layout_gravity="center_vertical|center_horizontal"
               android:id="@+id/linearLAction"
               android:background="@drawable/backcell_1"
               >
               <TextView
                   android:visibility="gone"
                   android:id="@+id/lblAction"
                   android:layout_width="120dp"
                   android:textAlignment="center" android:gravity="center_horizontal"
                   android:layout_height="match_parent"
                   android:layout_margin="1dp"
                   android:padding="@dimen/SmallerDp"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text=""/>
               <Button
                   android:id="@+id/btnAction"
                   style="?android:textAppearanceSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal|center_vertical"
                   android:layout_weight=".2"
                   android:background="@drawable/themed_small_button_1"
                   android:minHeight="@dimen/btnHeightSmall"
                   android:minWidth="105dp"
                   android:text=""
                   android:textColor="@color/row_button_color"
                   android:textSize="12sp"
                   android:textStyle="bold"  />
           </LinearLayout>
       </TableRow>
   </LinearLayout>

</androidx.cardview.widget.CardView>