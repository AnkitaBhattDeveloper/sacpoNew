<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_approve_leave"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/footer_MarginBottom"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/a_m_leave_approval">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/SmallerDp"
            android:background="@drawable/myaccount_border"
            android:padding="@dimen/SmallerDp">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/biggestDp"
                android:layout_marginTop="@dimen/biggestDp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/details_container"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/SmallerDp">


                    <ProgressBar
                        android:id="@+id/progress_bar_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/biggestDp"
                        android:layout_marginTop="@dimen/biggestDp"
                        android:visibility="gone" />







                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/SmallerDp"
                        android:layout_marginTop="@dimen/SmallerDp">




                        <LinearLayout
                            android:id="@+id/body_container"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/HeadingDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center" android:gravity="center_horizontal"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text=""
                                    android:padding="@dimen/ExtraSmallDp"
                                    android:textSize="@dimen/BigTextSize"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_below="@+id/HeadingDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="3dp"
                                    android:layout_alignRight="@+id/HeadingDetails"
                                    android:layout_alignLeft="@+id/HeadingDetails"
                                    android:background="@color/colorPrimaryDark"/>
                            </RelativeLayout>


                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_20"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:weightSum="5"
                                    >
                                    <TextView
                                        android:id="@+id/lblStudentName"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:textAllCaps="true" />
                                    <TextView
                                        android:id="@+id/txtStudentName"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:text=" "
                                        android:textAllCaps="true" />
                                </LinearLayout>
                                <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/back_small_value"
                                android:textColor="@color/txt_small_value"
                                android:weightSum="5"
                                >
                                <TextView
                                    android:id="@+id/lblDate"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textAllCaps="true" />
                                <TextView
                                    android:id="@+id/txtDate"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:text=" "
                                    android:textAllCaps="true" />
                            </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:weightSum="5"
                                    >
                                    <TextView
                                        android:id="@+id/lblLeaveType"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:textAllCaps="true" />
                                    <TextView
                                        android:id="@+id/txtLeaveType"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:text=" "
                                        android:textAllCaps="true" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"
                                    android:weightSum="5"
                                    >
                                    <TextView
                                        android:id="@+id/lblStatus"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:textAllCaps="true" />
                                    <TextView
                                        android:id="@+id/txtStatus"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:text=" "
                                        android:textAllCaps="true" />
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/lblDateApplied"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>

                                <TextView
                                    android:id="@+id/txtDateApplied"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />
                                
                                <TextView
                                    android:id="@+id/lblReason"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>

                                <TextView
                                    android:id="@+id/txtReason"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:id="@+id/LLRemark">
                                <TextView
                                    android:id="@+id/lblRemark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>

                                <TextView
                                    android:id="@+id/txtRemark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            <LinearLayout
                android:id="@+id/LLApprovalContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lblapproveType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/SmallerDp"
                        android:layout_marginLeft="@dimen/SmallerDp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/SmallerTextSize" />
                    <Spinner
                        android:id="@+id/inputSpinnerApproveType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginRight="@dimen/SmallerDp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_bg_1"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/MessageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/headLogo"
                    android:layout_marginBottom="@dimen/ExtrabiggestDp"
                    android:layout_marginTop="@dimen/GiantDp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/lblleaveReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/SmallerDp"
                        android:layout_marginLeft="@dimen/SmallerDp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/SmallerTextSize" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/inputMessage"
                            style="@style/editText_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:hint=""
                            android:inputType="textImeMultiLine"
                            app:errorTextAppearance="@style/errorText"
tools:ignore="MissingPrefix"
                            tools:scrollbars="vertical" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/buttonContainer"
                    android:layout_marginTop="@dimen/margin_thirty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/passwordContainer"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/loginContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/bigDp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSubmit"
                            style="?android:textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/themed_button"
                            android:minHeight="@dimen/btnHeight"
                            android:minWidth="@dimen/btnWidth"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
