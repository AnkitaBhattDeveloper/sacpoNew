<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_Row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lbl_s_LearnerName"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center" android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/lbl_s_RegistrationNumber"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center" android:gravity="center_horizontal"
         />

    <TextView
        android:id="@+id/lbl_s_LearnerId"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center" android:gravity="center_horizontal"
         />
        <TextView
            android:id="@+id/lbl_s_University"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:minHeight="@dimen/btnHeightSmall"
            android:layout_margin="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

    <TextView
        android:id="@+id/lbl_s_Duration"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textStart" />

        <TextView
            android:id="@+id/lbl_s_StartDate"
            android:layout_width="100dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:layout_margin="1dp"
            android:minHeight="@dimen/btnHeightSmall"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

     <TextView
            android:id="@+id/lbl_s_EndDate"
            android:layout_width="100dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:layout_margin="1dp"
            android:minHeight="@dimen/btnHeightSmall"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

     <TextView
            android:id="@+id/lbl_s_WorkedDay"
            android:layout_width="100dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:layout_margin="1dp"
            android:minHeight="@dimen/btnHeightSmall"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />


     <TextView
            android:id="@+id/lbl_s_LeaveDay"
            android:layout_width="100dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:layout_margin="1dp"
            android:minHeight="@dimen/btnHeightSmall"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />



            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:textAlignment="center" android:gravity="center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/linearLAction">

            <TextView
                android:visibility="gone"
                android:id="@+id/lblAction"
                android:layout_width="120dp"
                android:textAlignment="center" android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="@dimen/SmallerDp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <Button
                android:id="@+id/btnAction_DownloadLearnerCv"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".2"
                android:background="@drawable/themed_small_button"
                android:minHeight="@dimen/btnHeightSmall"
                android:minWidth="105dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
            </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center" android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLAction2">

        <TextView
            android:visibility="gone"
            android:id="@+id/lblAction2"
            android:layout_width="120dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <Button
            android:id="@+id/btnAction_ApprovedAttendance"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center" android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLAction3">

        <TextView
            android:visibility="gone"
            android:id="@+id/lblAction3"
            android:layout_width="120dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <Button
            android:id="@+id/btnAction_DownloadClaimForm"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center" android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLAction4">

        <TextView
            android:visibility="gone"
            android:id="@+id/lblAction4"
            android:layout_width="120dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <Button
            android:id="@+id/btnAction_Approved_Approve"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>






</TableRow>
