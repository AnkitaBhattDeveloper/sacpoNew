<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tRowL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView
        android:visibility="gone"
        android:id="@+id/lblLearnerId"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text="@string/l_leave_date_S115_101"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/lblLeaveDate"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text="@string/l_leave_date_S115_101"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/lblLeaveDay"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text="@string/l_leave_date_S115_101"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/lblLeaveType"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text="@string/l_leave_type_S115_102"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="180dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="" />
    <TextView
        android:id="@+id/lblLearner"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text="@string/l_leave_date_S115_101"
        android:ellipsize="end"
        android:maxLines="1"

        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/lADownload">

        <TextView
            android:visibility="gone"
            android:id="@+id/lblActionDownload"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <Button
            android:id="@+id/btnActionDownload"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</TableRow>

