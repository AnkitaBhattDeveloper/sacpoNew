<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/SmallerDp"
    android:layout_marginBottom="@dimen/footer_MarginBottom"
    android:background="@color/background_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".grant.xCubeMentor.time_sheet.TimeSheetA"
    tools:showIn="@layout/c_m_time_sheet">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/SmallerDp"
            android:background="@drawable/myaccount_border"
            android:padding="@dimen/SmallerDp">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/biggestDp"
                android:layout_marginTop="@dimen/biggestDp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" android:gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="HEADING"
                    android:padding="@dimen/ExtraSmallDp"
                    android:textSize="@dimen/BigTextSize"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/ExtraGiantDp"
                    android:layout_marginRight="@dimen/ExtraGiantDp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/heading"
                    />

                <LinearLayout
                    android:background="@color/background_grey"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/leavesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_margin="@dimen/SmallerDp"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:id="@+id/lblLeavesTT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tool_tip_button"
                        android:text="\?"
                        android:textColor="@color/black"
                        android:paddingTop="@dimen/SmallerDp"
                        android:paddingBottom="@dimen/SmallerDp"
                        android:paddingLeft="@dimen/bigDp"
                        android:paddingRight="@dimen/bigDp"
                        />
                    <TextView
                        android:id="@+id/lblMLeaves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/SmallDp"
                        android:textStyle="bold"
                        android:textSize="@dimen/BigTextSize"
                        android:background="@color/greyish"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center" android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:text=""
                        />
                    <ProgressBar
                        android:id="@+id/progress_bar_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/biggestDp"
                        android:layout_marginTop="@dimen/biggestDp"
                        android:visibility="gone" />
                    <LinearLayout
                        android:id="@+id/content_container_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progress_bar_r"
                        android:orientation="vertical">
                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/leavesTable"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:stretchColumns="*">
                            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/leavesTableScroll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.recyclerview.widget.RecyclerView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/rVLeaves"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:isScrollContainer="true"
                                    android:scrollY="@dimen/SmallerDp"
                                    android:scrollbars="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:context=".grant.xCubeMentor.leaves.MSLeaveDetailListA"
                                    tools:listitem="@layout/m_leave_row" />
                            </HorizontalScrollView>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>