<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tRowL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lblLeaveMonth"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:background="@drawable/backcell"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    
    <TextView
        android:id="@+id/lblLeaveFrom"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
       />
    <TextView
        android:id="@+id/lblLeaveTo"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
         />
    <TextView
        android:id="@+id/lblAnnualLeave"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:text=""/>
    <TextView
        android:id="@+id/lblSickLeave"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:text=""/>
    <TextView
        android:id="@+id/lblOtherPaidLeave"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:text=""/>
    <TextView
        android:id="@+id/lblUnpaidLeave"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:text=""/>
    <TextView
        android:id="@+id/lblSApproval"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="@dimen/SmallerDp"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:ellipsize="end"
        android:background="@drawable/backcell"
        android:maxLines="1"
        android:text=""/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLMotivation"
        android:background="@drawable/backcell"
    >
        <TextView
            android:visibility="gone"
            android:id="@+id/lblMotivation"
            android:layout_width="180dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""/>
        <Button
            android:id="@+id/btnMotivation"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLSComments"
        android:background="@drawable/backcell"
        >
        <TextView
            android:id="@+id/lblSComments"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:padding="@dimen/SmallerDp"
            android:layout_margin="1dp"
            android:minHeight="@dimen/btnHeightSmall"
            android:ellipsize="end"
            android:background="@drawable/backcell"
            android:maxLines="1"
            android:text=""/>
        <Button
            android:id="@+id/btnSComments"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLUploads"
        android:background="@drawable/backcell"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/lblUploads"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""/>
        <Button
            android:id="@+id/btnUploads"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLEdit"
        android:background="@drawable/backcell"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/lblEdit"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""/>
        <Button
            android:id="@+id/btnEdit"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLRemove"
        android:background="@drawable/backcell"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/lblRemove"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""/>
        <Button
            android:id="@+id/btnRemove"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</TableRow>
