<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sReports_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/TxtLearnerName"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textAlignment="center" android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/TxtWeekendDate"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textAlignment="center" android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/TxtDay"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textAlignment="center" android:gravity="center_horizontal"
        />
    <TextView

        android:visibility="gone"
        android:id="@+id/TxtDepartmentName"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textAlignment="center" android:gravity="center_horizontal"
        />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/LinearLayoutAction"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:textAlignment="center" android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/txtAction"
            android:layout_width="150dp"
            android:textAlignment="center" android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="@dimen/SmallerDp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <Button
            android:id="@+id/btnAction"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</TableRow>