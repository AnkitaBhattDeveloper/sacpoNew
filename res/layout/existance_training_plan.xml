<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tRowA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/backcell_1"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:textAlignment="center" android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/lblTrainingPlan"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/backcell_1"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:text=""
        android:textAlignment="center" android:gravity="center_horizontal" />
    <LinearLayout
        android:id="@+id/linearLAction1"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="1dp"
        android:background="@drawable/backcell_1"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/lblAction1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/backcell_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="@dimen/btnHeightSmall"
            android:padding="@dimen/SmallerDp"
            android:text=""
            android:visibility="visible"
            android:textAlignment="center" android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btnAction1"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/themed_small_button_1"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:visibility="gone"/>
    </LinearLayout>




</TableRow>