<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:layout_marginBottom="@dimen/footer45_MarginBottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".grant.xCubeMentor.claims.MLearnerGrantDetailsA"
    tools:showIn="@layout/a_m_learner_grant_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/biggestDp"
                    android:layout_marginTop="@dimen/biggestDp"
                    android:visibility="gone" />
                <LinearLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_bar"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/SmallerDp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/activity_heading"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center" android:gravity="center_horizontal"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:text="HEADING"
                                        android:padding="@dimen/ExtraSmallDp"
                                        android:textSize="@dimen/BigTextSize"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_marginLeft="@dimen/ExtraGiantDp"
                                        android:layout_marginRight="@dimen/ExtraGiantDp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/heading_1"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="visible"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:id="@+id/lblLearnerName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_heading"
                                        android:textColor="@color/txt_small_heading"
                                        android:textStyle="bold"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/txtLearnerName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_value"
                                        android:textColor="@color/txt_small_value"/>

                                    <TextView
                                        android:id="@+id/lblStipend"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_heading"
                                        android:textColor="@color/txt_small_heading"
                                        android:textStyle="bold"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/txtStipend"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_value"
                                        android:textColor="@color/txt_small_value"/>


                                    <TextView
                                        android:id="@+id/lblStartDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_heading"
                                        android:textColor="@color/txt_small_heading"
                                        android:textStyle="bold"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/txtStartDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_value"
                                        android:textColor="@color/txt_small_value"/>


                                    <TextView
                                        android:id="@+id/lblEndDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_heading"
                                        android:textColor="@color/txt_small_heading"
                                        android:textStyle="bold"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/txtEndDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:padding="@dimen/small"
                                        android:layout_margin="@dimen/ExtraSmallerDp"
                                        android:background="@color/back_small_value"
                                        android:textColor="@color/txt_small_value"/>



                                </LinearLayout>

                                <View
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/background_s_view"/>


                                <View
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginRight="@dimen/margin_15"
                                    android:layout_marginLeft="@dimen/margin_15"
                                    android:background="@color/background_s_view"/>


                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <RadioGroup
                                            android:layout_centerInParent="true"
                                            android:id="@+id/rg_container"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <androidx.appcompat.widget.AppCompatRadioButton
                                                android:id="@+id/rb_approve"
                                                android:layout_marginRight="@dimen/margin_20"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:tag="1"
                                                android:checked="true"
                                                android:text=""/>


                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginTop="@dimen/margin_5"
                                                android:layout_marginBottom="@dimen/margin_5"
                                                android:background="@color/background_s_view"/>


                                            <androidx.appcompat.widget.AppCompatRadioButton
                                                android:id="@+id/rb_reject"
                                                android:layout_marginLeft="@dimen/margin_20"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:tag="2"
                                                android:text=""/>


                                        </RadioGroup>


                                    </RelativeLayout>





                                </LinearLayout>


                            <LinearLayout
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/margin_15"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_10"
                                android:id="@+id/ll_reject_comment_container"
                                android:layout_marginTop="@dimen/margin_15"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:textSize="@dimen/NormalTextSize"
                                    android:textStyle="bold"
                                    android:id="@+id/lbl_rejectReason"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_height="wrap_content"
                                    />

                                <EditText
                                    android:id="@+id/et_reject_reason"
                                    android:text=""
                                    android:layout_margin="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:textAlignment="textStart"
                                    android:gravity="start"
                                    android:padding="@dimen/padding_5"
                                    android:background="@drawable/rect_box"/>


                            </LinearLayout>


                                <LinearLayout
                                    android:layout_marginBottom="@dimen/margin_15"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_marginTop="@dimen/margin_10"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <Button
                                                android:id="@+id/btn_back"
                                                android:padding="@dimen/padding_5"
                                                android:textStyle="normal"
                                                android:backgroundTint="@color/link"
                                                android:textColor="@android:color/white"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <LinearLayout
                                            android:id="@+id/ll_send_without_comment"
                                            android:layout_marginTop="@dimen/margin_10"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <Button
                                                android:id="@+id/btn_SavenContinue"
                                                android:padding="@dimen/padding_5"
                                                android:textStyle="normal"
                                                android:backgroundTint="@color/link"
                                                android:textColor="@android:color/white"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:visibility="gone"
                                            android:id="@+id/ll_send_withComment"
                                            android:layout_marginTop="@dimen/margin_10"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <Button
                                                android:id="@+id/btn_save"
                                                android:padding="@dimen/padding_5"
                                                android:textStyle="normal"
                                                android:backgroundTint="@color/link"
                                                android:textColor="@android:color/white"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>



                            </LinearLayout>
                        </ScrollView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>