<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tRowC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/chat_view_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f1c1c1c1" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:elevation="5dp"
        android:background="@color/row_one_o_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:id="@+id/imgUserImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="7dp">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/user_last_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/chat_count_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center">
                    <ImageView
                        android:id="@+id/chat_count_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:background="@drawable/circle" />
                    <TextView
                        android:id="@+id/chat_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/role_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:maxLines="1"
                android:minHeight="@dimen/btnHeightSmall"
                android:padding="@dimen/SmallerDp"
                android:text="Student"
                android:textAlignment="textStart"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/i_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:maxLines="1"
                android:minHeight="@dimen/btnHeightSmall"
                android:padding="@dimen/SmallerDp"
                android:text="DUT"
                android:textAlignment="center" android:gravity="center_horizontal"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/last_chatTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:minHeight="@dimen/btnHeightSmall"
                android:padding="@dimen/SmallerDp"
                android:text="22 Aug 2018 10:12:00 am"
                android:textAlignment="textEnd"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>