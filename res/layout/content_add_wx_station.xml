<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/c_m_addHolidays"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_add_wx_station">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/bigDp"
      android:background="@drawable/myaccount_border"
      android:padding="@dimen/bigDp">
   <ProgressBar
       android:id="@+id/progress_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="@dimen/biggestDp"
       android:layout_marginTop="@dimen/biggestDp"
       android:visibility="gone" />

   <LinearLayout
       android:id="@+id/content_container"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/progress_bar"
       android:orientation="vertical">

    <TextView
        android:id="@+id/activity_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:text="HEADING"
        android:padding="@dimen/ExtraSmallDp"
        android:textSize="@dimen/BigTextSize"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginLeft="@dimen/ExtraGiantDp"
        android:layout_marginRight="@dimen/ExtraGiantDp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heading_1"
        />
    <LinearLayout
        android:id="@+id/latitudeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headLogo"
        android:layout_marginBottom="@dimen/ExtrabiggestDp"
        android:layout_marginTop="@dimen/GiantDp"
        android:orientation="vertical">
     <TextView
         android:id="@+id/lblwAddLatitude"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="@dimen/SmallerDp"
         android:layout_marginLeft="@dimen/SmallerDp"
         android:text=""
         android:textAllCaps="true"
         android:textColor="@color/textColor"
         android:textSize="@dimen/SmallerTextSize" />
     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/inputLayoutwAddLatitude"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <EditText
          android:id="@+id/inputwAddLatitude"
          style="@style/editText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint=""
           android:maxLines="1"
          app:errorTextAppearance="@style/errorText"
tools:ignore="MissingPrefix" />
     </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wxLongitudeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headLogo"
        android:layout_marginBottom="@dimen/ExtrabiggestDp"
        android:layout_marginTop="@dimen/GiantDp"
        android:orientation="vertical">

     <TextView
         android:id="@+id/lblwXAddLongitude"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="@dimen/SmallerDp"
         android:layout_marginLeft="@dimen/SmallerDp"
         android:text=""
         android:textAllCaps="true"
         android:textColor="@color/textColor"
         android:textSize="@dimen/SmallerTextSize" />

     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/inputLayoutwXAddLongitude"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

      <EditText
          android:id="@+id/inputwXAddLongitude"
          style="@style/editText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint=""

          android:maxLines="1"
          app:errorTextAppearance="@style/errorText"
tools:ignore="MissingPrefix" />
     </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wXDeptCodeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headLogo"
        android:layout_marginBottom="@dimen/ExtrabiggestDp"
        android:layout_marginTop="@dimen/GiantDp"
        android:orientation="vertical">

     <TextView
         android:id="@+id/lblwXDeptCode"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="@dimen/SmallerDp"
         android:layout_marginLeft="@dimen/SmallerDp"
         android:text=""
         android:textAllCaps="true"
         android:textColor="@color/textColor"
         android:textSize="@dimen/SmallerTextSize" />

     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/inputLayoutwXDeptCode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

      <EditText
          android:id="@+id/inputwXDeptCode"
          style="@style/editText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint=""

          android:maxLines="1"
          app:errorTextAppearance="@style/errorText"
tools:ignore="MissingPrefix" />
     </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wXAddDeptName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headLogo"
        android:layout_marginBottom="@dimen/ExtrabiggestDp"
        android:layout_marginTop="@dimen/GiantDp"
        android:orientation="vertical">

     <TextView
         android:id="@+id/lblwXAddDeptName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="@dimen/SmallerDp"
         android:layout_marginLeft="@dimen/SmallerDp"
         android:text=""
         android:textAllCaps="true"
         android:textColor="@color/textColor"
         android:textSize="@dimen/SmallerTextSize" />

     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/inputLayoutwXAddDeptName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

      <EditText
          android:id="@+id/inputwXAddDeptName"
          style="@style/editText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint=""

          android:maxLines="1"
          app:errorTextAppearance="@style/errorText"
tools:ignore="MissingPrefix" />
     </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordContainer"
        android:orientation="vertical">
     <LinearLayout
         android:id="@+id/addwXContainer"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/bigDp"
         android:gravity="center_horizontal"
         android:orientation="horizontal">
      <Button
          android:id="@+id/btnwXAdd"
          style="?android:textAppearanceSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/middleDp"
          android:background="@drawable/themed_button"
          android:minHeight="@dimen/btnHeight"
          android:minWidth="@dimen/btnWidth"
          android:text=""
          android:textColor="@color/ButtonTxtwhite"
          android:textStyle="bold" />
     </LinearLayout>
    </LinearLayout>
   </LinearLayout>
  </RelativeLayout>
 </ScrollView>
</RelativeLayout>