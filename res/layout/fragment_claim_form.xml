<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grant.fragments.ClaimFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_layout"
        android:orientation="vertical"
        android:paddingTop="@dimen/paddingTop_fragmenthead">

        <TextView
            android:id="@+id/tv_Claim_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_ten"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_seventeen"
            android:textStyle="normal" />

        <View
            android:layout_width="@dimen/margin_eighty"
            android:layout_height="@dimen/margin_six"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_one"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_thirty"
            android:background="@color/button_selectorcolor" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ExtraSmallerDp"
                android:layout_marginRight="@dimen/ExtraSmallerDp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:textColor="@android:color/black">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_lbl_d_from"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:padding="@dimen/margin_six"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/edit_text_size" />

                        <TextView
                            android:id="@+id/tv_lbl_u_from"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:padding="@dimen/margin_six"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/edit_text_size" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_download"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_sm_small" />


                            <Button

                                android:id="@+id/btnDownloadCF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/ButtonTxtwhite"
                                android:textSize="@dimen/font_sm_small" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <Button
                                android:id="@+id/btnUpload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/ButtonTxtwhite"
                                android:textSize="@dimen/font_sm_small" />
                        </RelativeLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <Button
                                android:id="@+id/btn2_downlod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/ButtonTxtwhite"
                                android:textSize="@dimen/font_sm_small" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <ImageView
                                android:id="@+id/imgViewImage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                android:adjustViewBounds="true"
                                app:srcCompat="@mipmap/ic_launcher_check" />
                        </RelativeLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <Button
                                android:id="@+id/btn3_downlod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/ButtonTxtwhite"
                                android:textSize="@dimen/font_sm_small" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fee_box_rect"
                            android:padding="@dimen/margin_eight">

                            <Button
                                android:id="@+id/btn2_Upload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:text=""
                                android:textColor="@color/ButtonTxtwhite"
                                android:textSize="@dimen/font_sm_small" />
                        </RelativeLayout>

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_download"
            android:layout_marginTop="48dp" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:textAlignment="center" android:gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>