<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/rect_box"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_5"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#E2F1EDED"
            android:padding="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/txt_question"
                android:padding="@dimen/padding_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_three"
                android:text="@string/l_231_txt_Question"
                android:gravity="start|left"
                android:textStyle="bold"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBD8D8"/>

        <LinearLayout
            android:padding="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RadioGroup
                android:padding="@dimen/padding_5"
                android:id="@+id/rg_optn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/rb_option0"
                    android:scaleX="@dimen/rb_scale"
                    android:scaleY="@dimen/rb_scale"
                    android:visibility="gone"
                    android:textSize="@dimen/rb_text_size_small"
                    android:text="@string/rb_231_optn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/rb_option1"
                        android:scaleX="@dimen/rb_scale"
                        android:scaleY="@dimen/rb_scale"
                        android:textSize="@dimen/rb_text_size_small"
                        android:text="@string/rb_231_optn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                <RadioButton
                    android:id="@+id/rb_option2"
                    android:scaleX="@dimen/rb_scale"
                    android:scaleY="@dimen/rb_scale"
                    android:textSize="@dimen/rb_text_size_small"
                    android:text="@string/rb_231_optn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <RadioButton
                    android:id="@+id/rb_option3"
                    android:scaleX="@dimen/rb_scale"
                    android:scaleY="@dimen/rb_scale"
                    android:textSize="@dimen/rb_text_size_small"
                    android:text="@string/rb_231_optn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_option4"
                    android:scaleX="@dimen/rb_scale"
                    android:scaleY="@dimen/rb_scale"
                    android:textSize="@dimen/rb_text_size_small"
                    android:text="@string/rb_231_optn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <RadioButton
                    android:id="@+id/rb_option5"
                    android:scaleX="@dimen/rb_scale"
                    android:scaleY="@dimen/rb_scale"
                    android:textSize="@dimen/rb_text_size_small"
                    android:text="@string/rb_231_optn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>