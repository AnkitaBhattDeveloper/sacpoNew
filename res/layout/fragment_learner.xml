<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grant.fragments.LearnerFragment">

    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/step_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_ten"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_seventeen"
            android:textStyle="normal" />

        <View
            android:layout_width="@dimen/margin_eighty"
            android:layout_height="@dimen/margin_six"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_one"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_thirty"
            android:background="@color/button_selectorcolor" />


            <LinearLayout

                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_height"
                android:orientation="horizontal">


                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txClaimDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fee_box_rect"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_eleven">

                </TextView>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txClaimMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fee_box_rect"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_eleven">

                </TextView>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txDaysworks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fee_box_rect"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_eleven">

                </TextView>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txAttendence"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fee_box_rect"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_eleven">

                </TextView>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txClaimed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fee_box_rect"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_eleven">

                </TextView>

            </LinearLayout>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:padding="@dimen/recyclerview_min_padding"
                android:id="@+id/learnerRecylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </ScrollView>

    </LinearLayout>


</FrameLayout>