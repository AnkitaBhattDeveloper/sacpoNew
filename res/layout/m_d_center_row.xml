<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tRowA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp">

    <!--android:layout_width="100dp"-->
    <TextView
        android:id="@+id/lblYear"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/lblMonth"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="@dimen/btnHeightSmall"
        android:padding="@dimen/SmallerDp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:id="@+id/LLDownloadAttendanceRegister"
        android:layout_width="430dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/lblDownloadAttendanceRegister"
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/backcell"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="@dimen/btnHeightSmall"
            android:padding="@dimen/SmallerDp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btnDownloadAttendanceRegister"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDownloadClaimForm"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/lblDownloadClaimForm"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/SmallerDp"
            android:text=""
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDownloadClaimForm"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLUploadClaimForm"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/lblUploadClaimForm"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/SmallerDp"
            android:text=""
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnUploadClaimForm"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDownloadSignedClaimForm"
        android:layout_width="245dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="1dp"
        android:background="@drawable/backcell"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/lblDownloadSignedClaimForm"
            android:layout_width="245dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/backcell"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="@dimen/btnHeightSmall"
            android:padding="@dimen/SmallerDp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btnDownloadSignedClaimForm"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight=".2"
            android:background="@drawable/themed_small_button"
            android:minHeight="@dimen/btnHeightSmall"
            android:minWidth="105dp"
            android:text=""
            android:textColor="@color/row_button_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</TableRow>