<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <androidx.cardview.widget.CardView
       android:layout_margin="@dimen/small"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:weightSum="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text="Account Holder"
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
               <TextView
                   android:id="@+id/lblAccountHolderName"
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text=""
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
           </LinearLayout>
           <LinearLayout
               android:weightSum="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text="Bank Name"
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
               <TextView
                   android:id="@+id/lblBankName"
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text=""
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
           </LinearLayout>
           <LinearLayout
               android:weightSum="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text="Bank Branch Name"
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
               <TextView
                   android:id="@+id/lblBankBranchName"
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text=""
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
           </LinearLayout>
           <LinearLayout
               android:weightSum="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text="Bank Branch Code"
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
               <TextView
                   android:id="@+id/lblBankBranchCode"
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text=""
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
           </LinearLayout>
           <LinearLayout
               android:weightSum="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text="Date"
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
               <TextView
                   android:id="@+id/lblBankDate"
                   android:layout_weight=".5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/SmallerDp"
                   android:layout_marginLeft="@dimen/SmallerDp"
                   android:text=""
                   android:textAllCaps="true"
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/SmallerTextSize" />
           </LinearLayout>

       </LinearLayout>

   </androidx.cardview.widget.CardView>
</LinearLayout>