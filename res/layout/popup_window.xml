<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_black_overlay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="DECLARATION AND UNDERTAKING"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <WebView
                    android:id="@+id/wv_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/ExtraSmallerDp"
                    android:padding="@dimen/small"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/message_head"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp" />

            <VideoView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:id="@+id/message_video"
            />

            <Button
                android:id="@+id/btn_close"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/themed_small_button"
                android:minHeight="44dip"
                android:minWidth="150dip"
                android:padding="15dp"
                android:text="CLOSE"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
