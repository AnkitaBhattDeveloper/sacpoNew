<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_approve_leave"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/footer55_MarginBottom"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/c_m_stipend">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/SmallerDp"
            android:background="@drawable/myaccount_border"
            android:padding="@dimen/SmallerDp">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/biggestDp"
                android:layout_marginTop="@dimen/biggestDp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/details_container"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/SmallerDp">


                    <ProgressBar
                        android:id="@+id/progress_bar_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/biggestDp"
                        android:layout_marginTop="@dimen/biggestDp"
                        android:visibility="gone" />

                   <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/SmallerDp"
                        android:layout_marginTop="@dimen/SmallerDp">

                       <LinearLayout
                            android:id="@+id/body_container"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/HeadingDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center" android:gravity="center_horizontal"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="DETAILS"
                                    android:padding="@dimen/ExtraSmallDp"
                                    android:textSize="@dimen/BigTextSize"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_below="@+id/HeadingDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="3dp"
                                    android:layout_alignRight="@+id/HeadingDetails"
                                    android:layout_alignLeft="@+id/HeadingDetails"
                                    android:background="@color/colorPrimaryDark"/>
                            </RelativeLayout>


                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">



                                <TextView
                                    android:id="@+id/lblStudentName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtStudentName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"/>

                                <TextView
                                    android:id="@+id/lblDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true" />

                                <TextView
                                    android:id="@+id/txtDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value"/>
                                <TextView
                                    android:id="@+id/lblLeaveType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>

                                <TextView
                                    android:id="@+id/txtLeaveType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />
                                <TextView
                                    android:id="@+id/lblStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>
                                <TextView
                                    android:id="@+id/txtStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />

                                <TextView
                                    android:id="@+id/lblWorkedDays"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_heading"
                                    android:textColor="@color/txt_small_heading"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"/>
                                <TextView
                                    android:id="@+id/txtWorkedDays"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/small"
                                    android:layout_margin="@dimen/ExtraSmallerDp"
                                    android:background="@color/back_small_value"
                                    android:textColor="@color/txt_small_value" />

                                <LinearLayout
                                    android:id="@+id/buttonContainer"
                                    android:layout_marginBottom="@dimen/margin_thirty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/passwordContainer"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/loginContainer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/bigDp"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btnSubmit"
                                            style="?android:textAppearanceSmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/themed_button"
                                            android:minHeight="@dimen/btnHeight"
                                            android:minWidth="@dimen/btnWidth"
                                            android:text=""
                                            android:textColor="@android:color/white"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
