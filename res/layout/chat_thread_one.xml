<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:paddingRight="6dp"
    android:orientation="vertical">

    <!-- For self message -->
    <LinearLayout
        android:elevation="5dp"
        android:layout_gravity="right"
        android:layout_margin="3dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chat_me"
            android:layout_marginTop="4dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/textViewMessage"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello how are you? I was expecting a reply from your end but anyways it does not matter who reply first."
                android:layout_marginBottom="8dp"
                android:textColor="#111"
                android:textSize="13sp"
                android:lineSpacingExtra="4sp" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BC , 2016-05-29 16:02:00?"
                android:textSize="10dp"
                android:textColor="#666" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageView8"
                android:layout_gravity="top"
                android:background="@mipmap/ic_launcher"
                app:srcCompat="@drawable/listimg" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>