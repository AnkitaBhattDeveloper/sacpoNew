<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_marginBottom="@dimen/footer45_MarginBottom"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/biggestDp"
        android:layout_marginTop="@dimen/biggestDp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/SmallerDp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMentorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="HEADING"
                    android:padding="@dimen/ExtraSmallDp"
                    android:textSize="@dimen/BigTextSize"
                    android:textStyle="bold"
                    />
                  <View
                        android:id="@+id/heading"
                        android:layout_marginLeft="@dimen/ExtraGiantDp"
                        android:layout_marginRight="@dimen/ExtraGiantDp"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/heading_1"
                        />


                <LinearLayout
                    android:id="@+id/body_container"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/detail_container"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lblPosition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <TextView
                            android:id="@+id/txtPosition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_value"
                            android:textColor="@color/txt_small_value" />
                        <TextView
                            android:id="@+id/lblDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <TextView
                            android:id="@+id/txtDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_value"
                            android:textColor="@color/txt_small_value" />

                        <TextView
                            android:id="@+id/lblMentor_cellNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <LinearLayout
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:textColor="@color/txt_small_value"
                            android:background="@color/back_small_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtMentor_cellNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.8"
                                android:background="@color/back_small_value"
                                android:text="" />

                            <Button
                                style="?android:textAppearanceSmall"
                                android:id="@+id/mMentorCallButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight=".2"
                                android:background="@drawable/themed_small_button_1"
                                android:minHeight="@dimen/btnHeightSmaller"
                                android:minWidth="@dimen/btnWidthSmaller"
                                android:textColor="@color/row_button_color"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lblMentorEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <LinearLayout
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:textColor="@color/txt_small_value"
                            android:background="@color/back_small_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtMentorEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.8"
                                android:background="@color/back_small_value"
                                android:text="" />

                            <Button
                                style="?android:textAppearanceSmall"
                                android:id="@+id/mMentorEmailButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight=".2"
                                android:background="@drawable/themed_small_button_1"
                                android:minHeight="@dimen/btnHeightSmaller"
                                android:minWidth="@dimen/btnWidthSmaller"
                                android:textColor="@color/row_button_color"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lblMentorOfficeNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <LinearLayout
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:textColor="@color/txt_small_value"
                            android:background="@color/back_small_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtMentorOfficeNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.8"
                                android:background="@color/back_small_value"
                                android:text="" />

                            <Button
                                style="?android:textAppearanceSmall"
                                android:id="@+id/mMentorOfficeCallButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight=".2"
                                android:background="@drawable/themed_small_button_1"
                                android:minHeight="@dimen/btnHeightSmaller"
                                android:minWidth="@dimen/btnWidthSmaller"
                                android:textColor="@color/row_button_color"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lblHostName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <TextView
                            android:id="@+id/txtHostName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_value"
                            android:textColor="@color/txt_small_value" />
                        <TextView
                            android:id="@+id/lblHostSDLNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_heading"
                            android:textColor="@color/txt_small_heading"
                            android:textStyle="bold"
                            android:textAllCaps="true" />
                        <TextView
                            android:id="@+id/txtHostSDLNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/small"
                            android:layout_margin="@dimen/ExtraSmallerDp"
                            android:background="@color/back_small_value"
                            android:textColor="@color/txt_small_value" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>