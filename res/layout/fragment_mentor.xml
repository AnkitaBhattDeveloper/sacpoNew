<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grant.fragments.MentorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_layout"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_ten"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_seventeen"
            android:textStyle="normal" />

        <View
            android:layout_width="@dimen/margin_eighty"
            android:layout_height="@dimen/margin_six"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_one"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_thirty"
            android:background="@color/button_selectorcolor" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_height"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:weightSum="3">


            <TextView
                android:id="@+id/txMentorApprovedBy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/fee_box_rect"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="@dimen/margin_six"
                android:text="@string/l_126_116_fragment_mentor"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_eleven"></TextView>

            <TextView
                android:id="@+id/txVerified"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/fee_box_rect"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="@dimen/margin_six"
                android:text="@string/l_126_117_fragment_mentor"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_eleven">

            </TextView>

            <TextView
                android:id="@+id/txMenDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/fee_box_rect"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="@dimen/margin_six"
                android:text="@string/l_126_118_fragment_mentor"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_eleven">

            </TextView>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMenterRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>