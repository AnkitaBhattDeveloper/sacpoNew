<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_height"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/txEmployerApprovedAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fee_box_rect"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="@dimen/margin_six"
            android:text="0"
            android:textColor="@color/Color_maroon"
            android:textSize="@dimen/font_eleven" />


        <TextView
            android:id="@+id/txEmployerApprovedBy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fee_box_rect"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="@dimen/margin_eight"
            android:text="--"
            android:textColor="@color/Color_maroon"
            android:textSize="@dimen/font_eleven" />


        <TextView
            android:id="@+id/txEmployerDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fee_box_rect"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="@dimen/margin_eight"
            android:text="0"
            android:textColor="@color/Color_maroon"
            android:textSize="@dimen/font_eleven" />


    </LinearLayout>

</LinearLayout>